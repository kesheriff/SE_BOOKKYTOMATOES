

<body>

<p class="c_show" style="text-align:center">
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p class="c_show" style="text-align:center">
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<p class="c_show" style="text-align:center">
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p class="c_show" style="text-align:center">
  <strong>Release date:</strong>
  <%= @movie.release_date %>
</p>

<div class="center">
<%= link_to '<button class="button_show">Edit</button>'.html_safe, edit_movie_path(@movie) %>
<%= link_to '<button class="button_show">Delete</button>'.html_safe, @movies,:method => :delete %>
</div>
<br>
<div class="center">
<%= link_to '<button class="button_show">Back</button>'.html_safe, movies_path(@movie) %>



</div>
</body>




