
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">


<style>

.navbar {
  overflow: hidden;
  background-color: #96bb7c;
}

.navbar a {
  font-size: 48px;
  color: #c26565;
  text-align: center;
  text-decoration: none;
}



body{
  background-color: #c26565;
}


.button_home {
  background-color: #eebb4d;
  color: black;
  border: 2px solid #eebb4d;
  padding: 26px 20px;
  font-size: 16px;
  display: block;
  
}

.button_new {
  background-color: #f5f1da;
  color: black;
  border: 2px solid #96bb7c;
  padding: 14px 20px;
  border-radius: 12px;
  font-size: 16px;
  display: block;
  position: absolute;
  left: 500px;
  top: 15px;
}

.button_new:hover {background-color: #c26565;color: white;}

.button_show {
  background-color: white;
  color: black;
  border: 2px solid #96bb7c;
  padding: 14px 40px;
  border-radius: 12px;
  font-size: 20px;
}
.button_show:hover {background-color: #96bb7c;}

.center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.c_show{
  font-size: 20px;
}

</style>

<div class="navbar">
<%= link_to 'BOOKKYTOMATOES', movies_path %>
<%= link_to '<button class="button_new">Add New Movies</button>'.html_safe, new_movie_path %>
</div>

<body>
<p id="notice"><%= notice %></p>

<p class="c_show" style="text-align:center">
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p class="c_show" style="text-align:center">
  <strong>Rating:</strong>
  <%= @movie.rating %>
</p>

<p class="c_show" style="text-align:center">
  <strong>Description:</strong>
  <%= @movie.description %>
</p>

<p class="c_show" style="text-align:center">
  <strong>Release date:</strong>
  <%= @movie.release_date %>
</p>

<div class="center">
<%= link_to '<button class="button_show">Edit</button>'.html_safe, edit_movie_path(@movie) %>
<%= link_to '<button class="button_show">Delete</button>'.html_safe, @movies,:method => :delete %>
</div>
<br>
<div class="center">
<%= link_to '<button class="button_show">Back</button>'.html_safe, movies_path(@movie) %>

</div>
</body>




